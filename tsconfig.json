{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "build",
    "incremental": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
